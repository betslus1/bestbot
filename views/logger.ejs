<%- include('header') %>

<div class="container-fluid">
	<h3 class="col-12">Logger</h3>
</div>

<table id="loggerTable" style="width: 100%;" class="table table-small">
	<thead>
		<tr>
			<th>Id</th>
			<th>Time</th>
			<th>Module</th>
			<th>Type</th>
			<th>Desc</th>
		</tr>
	</thead>
	<tbody>
		<% for (let l of logs) { %>
			<tr>
				<td><%=l.id%></td>
				<td><%=moment(l.time).format("YYYY-MM-DD HH:mm:ss")%></td>
				<td><%=l.module%></td>
				<td><%=l.type%></td>
				<td style="max-width: 500px; word-break: break-all;"><%=l.desc%></td>
			</tr>
		<% } %>
	</tbody>
</table>

<script>

	$(function(){
		$(`#loggerTable`).DataTable({
	      "autoWidth": false,
	      "pageLength":100,
	      "order": [[0, 'desc']],
		});
	});

  function workmode(mode){
  	return true;
  }
</script>

